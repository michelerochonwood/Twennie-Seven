<section class="groupsection">
    <h2 class="groupsection-title">group overview</h2>
    <p class="groupsection-title2">{{groupMember.groupId.groupName}}</p>
    
    <!-- Group Member Count -->
    <div class="groupsection-stats">
        <p>Total Members: {{groupMembers.length}} of possible 10</p>
    </div>

    <!-- Group Members Grid -->
    <div class="groupsection-grid">
        <!-- Render existing group members -->
        {{#each groupMembers}}
            <div class="groupsection-card">
                <div class="groupsection-card-image">
                    {{#if this.profileImage}}
                        <img src="{{this.profileImage}}" alt="{{this.name}}'s profile">
                    {{else}}
                        <img src="/images/default-avatar.png" alt="Default profile">
                    {{/if}}
                </div>
                <div class="groupsection-card-info">
                    <h3 class="groupsection-card-name">{{this.name}}</h3>
                    <p class="groupsection-card-title">{{this.professionalTitle}}</p>
                </div>
                <button type="button" class="groupsection-card-button" onclick="window.location.href='/profile/group_member/{{this._id}}'">
                    view profile
                </button>
            </div>
        {{/each}}

        <!-- Render empty slots for available group member spots -->
        {{#if (lt groupMembers.length maxGroupSize)}}
            {{#each (range groupMembers.length maxGroupSize)}}
                <div class="groupsection-card groupsection-empty">
                    <div class="groupsection-card-image">
                        <img src="/images/default-avatar.png" alt="Empty slot">
                    </div>
                    <div class="groupsection-card-info">
                        <h3 class="groupsection-card-name">Available Slot</h3>
                        <p class="groupsection-card-title">Available</p>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
</section>



