                    {{/each}}
                </ul>
                <a href="/membertopics/{{selectedTopics.topic2.viewName}}" class="leader-profile-topic-review">review this topic</a>


            </div>
        {{/if}}

        {{#if leader.selectedTopics.topic3.title}}
