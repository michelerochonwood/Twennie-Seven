                <div class="leader-profile-topic-title">{{leader.selectedTopics.topic3.title}}</div>
                <ul class="leader-profile-topic-subtopics">
                    {{#each leader.selectedTopics.topic3.subtopics}}
                        <li>{{this}}</li>
                    {{else}}
                        <li>No subtopics available</li>
                    {{/each}}
                </ul>
                <a href="/membertopics/{{selectedTopics.topic3.viewName}}" class="leader-profile-topic-review">review this topic</a>


            </div>
        {{/if}}
    </div>
</div>
