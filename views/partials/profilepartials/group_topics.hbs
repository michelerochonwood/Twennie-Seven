                    {{/each}}
                </ul>
                <a href="/membertopics/{{group.selectedTopics.topic2.viewName}}" class="group-profile-topic-review">review this topic</a>
            </div>
        {{/if}}

        {{#if group.selectedTopics.topic3}}
            <div class="group-profile-topic-card" data-topic-id="{{group.selectedTopics.topic3.slug}}">
                <div class="group-profile-topic-title">{{group.selectedTopics.topic3.title}}</div>
                <ul class="group-profile-topic-subtopics">
                    {{#each group.selectedTopics.topic3.subtopics}}
                        <li>{{this}}</li>
                    {{else}}
                        <li>No subtopics available</li>
                    {{/each}}
                </ul>
                <a href="/membertopics/{{group.selectedTopics.topic3.viewName}}" class="group-profile-topic-review">review this topic</a>
            </div>
        {{/if}}
    </div>
</div>

